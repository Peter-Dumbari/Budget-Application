<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-4 offset-4 bg-light p-3">
        <h2 class="text-center">Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group mb-3">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, class:"form-control rounded-0" %>
        </div>

          <div class="orm-group mb-3">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control rounded-0" %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control rounded-0" %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"form-control rounded-0"%>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-info w-100 rounded-0 p-2 text-white fw-bold" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

    </div>
  </div>
</div>

