<div class="container-fluid">

<h3 class="text-center mt-3">Add Transaction </h3>


  <div class="row">
    <div class="col-6 offset-3 mt-3 p-3 bg-light">
    <%= form_with(model: [@category, @transaction_record], url: category_transaction_records_path(@category), local: true, remote: true, data: { turbo: false }) do |form| %>
      <div class="form-group mb-3">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control rounded-0' %>
      </div>
      
    <div class="form-group mb-3">
        <%= form.label :amount %>
        <%= form.text_field :amount, class: 'form-control rounded-0' %>
      </div>
      
      
      <div class="form-group mb-3">
        <%= form.label :category_id %>
        <%= form.collection_select(:category_id, current_user.categories, :id, :name, { prompt: 'Select a category' }, class: 'form-control rounded-0') %> 

      </div>
    
      <div class="form-group">
        <%= form.submit 'Save', class: 'btn btn-info w-100 rounded-0 p-2 text-white fw-bold' %>
      </div>
    <% end %>
    
    </div>
  </div>
</div>


