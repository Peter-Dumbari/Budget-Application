
<div class="container-fluid">

<h3 class="text-center mt-3 fw-bold"> Add New Category </h3>
  <div class="row">
    <div class="col-md-6 offset-md-3 p-3 bg-light">
    <%= form_with(model: @category, url: categories_path, local: true) do |form| %>
  
      <div class="form-group mb-3">
        <%= form.label :name, 'Category Name' %>
        <%= form.text_field :name, class: 'form-control rounded-0' %>
      </div>
    
      <div class="form-group mb-3">
        <%= form.label :icon_id, 'Select Icon' %>
        <%= form.collection_select(:icon_id, Icon.all, :id, :name, { prompt: 'Select an Icon' }, class: 'form-control rounded-0') %> 
      </div>
      <div class="form-group mb-3">
        <%= form.submit 'Save', class: 'btn btn-info w-100 p-2 rounded-0' %>
      </div>
    <% end %>
    </div>
  </div>
</div>


